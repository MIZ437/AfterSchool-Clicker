{
  "name": "afterschool-clicker",
  "version": "1.0.0",
  "description": "放課後クリッカー - A heroine-themed incremental clicker game",
  "main": "src/main.js",
  "author": "WAI-YU-DOH <ashimizu437@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "electron src/main.js",
    "start": "electron src/main.js",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "clean": "rimraf dist build",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "csv-parser": "^3.0.0",
    "csv-parse": "^5.5.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "rimraf": "^5.0.5"
  },
  "build": {
    "appId": "com.waiyudoh.afterschool-clicker",
    "productName": "放課後クリッカー",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "asar": true,
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/images/ui/app_icon.png",
      "sign": null,
      "signingHashAlgorithms": ["sha256"]
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "portable": {
      "artifactName": "${productName} ${version}.${ext}"
    }
  }
}